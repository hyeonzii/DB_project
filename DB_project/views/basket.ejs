                  <th>강의시간2</th>
                  <th>강의시간3</th>
              </tr>
<%
              for(var i=0;i<Regrows.length;i++)
              {
                var oneItem=Regrows[i];
%>
                <tr align="center">
                  <td><%=oneItem.학정번호%></td>
                  <td><%=oneItem.과목명%></td>
                  <td><%=oneItem.구분%></td>
                  <td><%=oneItem.교수%></td>
                  <td><%=oneItem.학점%></td>
